{{!-- 
Theme Park Comment Page (INDIVIDUAL THEME PARK)

    /homepage/{idOfThemePark}/comments
- list of all comments
- add button (Another page)
 --}}

<a href = "/themepark/{{_id}}">Go back to theme park page</a>
<br>
<p id = "error"></p>
<button id="addComment">Add Theme Park Comment</button>
<div id="comment" hidden>
    <p>Please enter the following information to add a comment to {{themeParkName}}</p>
    <form id = "commentForm">
        <label for="commentBody">Theme Park Comment</label>
        <br>
        <textarea name="commentBody" id="commentBody"></textarea>
        <br>
        <button data-id={{_id}} data-index-number="0" type="submit">Submit comment</button>
    </form>
    <button id="cancelButton">Cancel</button>
</div>
<div id="commentList">
  {{#each comments}}
    <div data-id="{{_id}}">
      User: {{userName}} Comment: {{commentBody}}
      <button class="childCommentBtn">Add a comment</button>
      <div hidden>
        <p>Reply</p>
        <form class="childCommentForm">
          <label for="childCommentForm"></label>
          <br>
          <textarea name="childCommentBody" class="childCommentBody"></textarea>
          <br>
          <button  type="submit">Submit Reply</button>
        </form>
        <button class="cancelChildButton">Cancel</button>
      </div>
      <br>
      {{#each comments}}
        <p>Reply</p>
        <p>User: {{userName}} Comment: {{commentBody}}</p>
      {{/each}}
    </div>
  {{/each}}
</div>

