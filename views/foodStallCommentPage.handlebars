{{!-- 

    /homepage/{idOfThemePark}/foodStalls/{idOfFoodStall}/comments

 --}}
<p id = "error"></p>
<button id="addComment">Add Food Stall Comment</button>
<div id="comment" hidden>
    <p>Please enter the following information to add a comment to {{foodStallName}}</p>
    <form id = "commentForm">
        <label for="commentBody">Food Stall Comment</label>
        <br>
        <textarea name="commentBody" id="commentBody"></textarea>
        <br>
        <button data-id={{_foodstallId}} data-index-number="2" type="submit">Submit comment</button>
    </form>
    <button id="cancelButton">Cancel</button>
</div>
<div id="commentList">
  {{#each comments}}
    <div data-id="{{_id}}">
      User: {{userName}} Comment: {{commentBody}}
      <button class="childCommentBtn">Add a comment</button>
      <div hidden>
        <p>Reply</p>
        <form class="childCommentForm">
          <label for="childCommentForm"></label>
          <br>
          <textarea name="childCommentBody" class="childCommentBody"></textarea>
          <br>
          <button  type="submit">Submit Reply</button>
        </form>
        <button class="cancelChildButton">Cancel</button>
      </div>
      <br>
      {{#each comments}}
        <p>{{commentBody}}</p>
      {{/each}}
    </div>
  {{/each}}
</div>
